<!DOCTYPE html>
<html lang="en">
<head>
  <title>main page</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="image1.jpg" alt="Food image 1" style="width:100%;">
        <div class="carousel-caption">
          <h3>Food image 1</h3>
        </div>
      </div>
      <div class="item">
        <img src="image2.jpg" alt="Food image 2" style="width:100%;">
        <div class="carousel-caption">
          <h3>Food image 2</h3>
        </div>
      </div>
      <div class="item">
        <img src="image3.jpg" alt="Food image 3" style="width:100%;">
        <div class="carousel-caption">
          <h3>Food image 3</h3>
        </div>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<style>
  .slider-container {
    display: flex;
    overflow: hidden;
    position: relative; /* Needed for absolute positioning of arrows */
  }

  .slider-item {
    flex: 0 0 300px;
    margin: 10px;
    border: 1px solid #ccc;
    text-align: center;
    padding: 20px;
  }

  .slider-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 24px;
    cursor: pointer;
    z-index: 1;
  }

  .slider-arrow.prev {
    left: 10px;
  }

  .slider-arrow.next {
    right: 10px;
  }
</style>

<h2><center>RECOMMENDED RECIPE</center></h2>
<div class="slider-container recommended">
  <div class="slider-arrow prev" onclick="prevRecommendedSlide()">&#10094;</div>
  <div class="slider-item">
    <h3>Item 1</h3>
    <img src="item1.jpg" alt="Item 1">
    <p>Description for Item 1</p>
  </div>
  <div class="slider-item">
    <h3>Item 2</h3>
    <img src="item2.jpg" alt="Item 2">
    <p>Description for Item 2</p>
  </div>
  <div class="slider-item">
    <h3>Item 3</h3>
    <img src="item3.jpg" alt="Item 3">
    <p>Description for Item 3</p>
  </div>
  <div class="slider-item">
    <h3>Item 4</h3>
    <img src="item4.jpg" alt="Item 4">
    <p>Description for Item 4</p>
  </div>
  <div class="slider-item">
    <h3>Item 5</h3>
    <img src="item5.jpg" alt="Item 5">
    <p>Description for Item 5</p>
  </div>
  <div class="slider-item">
    <h3>Item 6</h3>
    <img src="item6.jpg" alt="Item 6">
    <p>Description for Item 6</p>
  </div>
  <div class="slider-arrow next" onclick="nextRecommendedSlide()">&#10095;</div>
</div>

<h2><center>LATEST RECIPE</center></h2>
<div class="slider-container latest">
  <div class="slider-arrow prev" onclick="prevLatestSlide()">&#10094;</div>
  <div class="slider-item">
    <h3>Item 1</h3>
    <img src="item1.jpg" alt="Item 1">
    <p>Description for Item 1</p>
  </div>
  <div class="slider-item">
    <h3>Item 2</h3>
    <img src="item2.jpg" alt="Item 2">
    <p>Description for Item 2</p>
  </div>
  <div class="slider-item">
    <h3>Item 3</h3>
    <img src="item3.jpg" alt="Item 3">
    <p>Description for Item 3</p>
  </div>
  <div class="slider-item">
    <h3>Item 4</h3>
    <img src="item4.jpg" alt="Item 4">
    <p>Description for Item 4</p>
  </div>
  <div class="slider-item">
    <h3>Item 5</h3>
    <img src="item5.jpg" alt="Item 5">
    <p>Description for Item 5</p>
  </div>
  <div class="slider-item">
    <h3>Item 6</h3>
    <img src="item6.jpg" alt="Item 6">
    <p>Description for Item 6</p>
  </div>
  <div class="slider-arrow next" onclick="nextLatestSlide()">&#10095;</div>
</div>

<script>
  let recommendedSlideIndex = 0;

  function showRecommendedSlide(index) {
    const recommendedSlides = document.querySelectorAll(".slider-container.recommended .slider-item");
    if (index < 0) {
      recommendedSlideIndex = recommendedSlides.length - 1;
    } else if (index >= recommendedSlides.length) {
      recommendedSlideIndex = 0;
    }

    for (let i = 0; i < recommendedSlides.length; i++) {
      recommendedSlides[i].style.display = "none";
    }

    for (let i = recommendedSlideIndex; i < recommendedSlideIndex + 3; i++) {
      if (recommendedSlides[i]) {
        recommendedSlides[i].style.display = "block";
      }
    }
  }

  function prevRecommendedSlide() {
    showRecommendedSlide(recommendedSlideIndex -= 3);
  }

  function nextRecommendedSlide() {
    showRecommendedSlide(recommendedSlideIndex += 3);
  }

  let latestSlideIndex = 0;

  function showLatestSlide(index) {
    const latestSlides = document.querySelectorAll(".slider-container.latest .slider-item");
    if (index < 0) {
      latestSlideIndex = latestSlides.length - 1;
    } else if (index >= latestSlides.length) {
      latestSlideIndex = 0;
    }

    for (let i = 0; i < latestSlides.length; i++) {
      latestSlides[i].style.display = "none";
    }

    for (let i = latestSlideIndex; i < latestSlideIndex + 3; i++) {
      if (latestSlides[i]) {
        latestSlides[i].style.display = "block";
      }
    }
  }

  function prevLatestSlide() {
    showLatestSlide(latestSlideIndex -= 3);
  }

  function nextLatestSlide() {
    showLatestSlide(latestSlideIndex += 3);
  }

  // Initial display
  showRecommendedSlide(recommendedSlideIndex);
  showLatestSlide(latestSlideIndex);
</script>

</body>
</html>
