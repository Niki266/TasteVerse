<!DOCTYPE html>
<html>
  <head>
    <title>Search Results</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous" />
    <link rel="stylesheet" href="/assets/master.css" type="text/css" />
  </head>
  <body>
    <%- include('header') %> 
    <div class="container mt-4">
      <div class="searchtable">
        <% if ( items && items.length > 0) { %>
          <% items.forEach((recipeName) => { %>
            <div class="searchrow">
              <div class="card">
                <a href="/user/recipe?id=<%= recipeName.id %>">
                <div class="card-body">
                  <h5 class="card-title"><%= recipeName.title %></h5>
                  <img class="recipeImage" src="../assets/FoodImages/<%=recipeName.image_name%>.jpg" >
                </div>
              </a>
              </div>
            </div> 
          <% }); %>
        <% } else { %>
          <p>No results found.</p>
        <% } %>
      </div>
    </div>
    </div>
    <%- include('footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous">
    </script>
  </body>
</html>
