<!DOCTYPE html>
<html>
<head>
  <title>Author edit</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <style>
    /* Style for the container div */
    #container {
        margin-top: 20px;
    }

    /* Style for the text input and remove button */
    .input-wrapper {
        display: flex;
        margin-bottom: 10px;
    }

    .text-input {
        flex: 1;
        margin-right: 10px;
    }

    .remove-button {
        background-color: #ff0000;
        color: #fff;
        border: none;
        cursor: pointer;
    }
</style>
</head>
<body>
<%- include('header'); %>

<% modifyRecipeData.forEach((modifiedRecipe) => { %>
<div class="md" style="margin-top: 4rem; margin-left: 8rem; margin-right: 8rem;">
    <form action="" method="POST">
    <div class="flex-column flex-xl-row d-flex justify-content-start ">
        <div>
        <!-- title -->
        <h3>Title</h3>
        <div class="mb-3" style="width: 20rem;">
            <input type="text" class="form-control" id="title" name="article_title" value="<%= modifiedRecipe.modifiedRecipe_title %>">
        </div>

        <!-- Ingredients -->
        <h3 class="my-4">Ingredients</h3>
        <div id="container" class="mb-3" style="width: 26rem;">
            <% modifiedRecipe.modifiedRecipe_ingridients.forEach((modifiedRecipe_ingridient) => { %>
            <div class="input-wrapper"><input type="text" class="form-control" value="<%= modifiedRecipe_ingridient %> " ><button class="mx-2 btn btn-danger">Remove</button></div>
            <% }); %>    
        </div>

        <button id="addButton" class="btn btn-primary">Add Ingredient</button>
    
        </div>
    </div>

    <div class="my-4">
        <div class="d-flex flex-column" style="width: 700px; margin-right: 2rem;">
        <h2>Instruction</h2>    
        <!-- instruction -->
        <div class="mb-3" style="width: 50%;">
            <textarea id="subject" class="form-control" name="article_text" style="height:500px; width: 800px;">
            <%= modifiedRecipe.modifiedRecipe_instructions %>
            </textarea>
        </div>    
        </div>    
        <button type="submit" class="btn btn-primary">Save Recipe</button>    
    </div>
    
    </form>
</div>
<% }); %>

<%- include('footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>      
<script>
    const addButton = document.getElementById("addButton");
    addButton.addEventListener("click", function(event){
    event.preventDefault()
    const container = document.getElementById("container");
                const inputWrapper = document.createElement("div");
                inputWrapper.classList.add("input-wrapper");

                const textInput = document.createElement("input");
                textInput.type = "text";
                textInput.classList.add("form-control");

                const removeButton = document.createElement("button");
                removeButton.innerText = "Remove";
                removeButton.classList.add("mx-2");
                removeButton.classList.add("btn");
                removeButton.classList.add("btn-danger");
                removeButton.addEventListener("click", function() {
                    container.removeChild(inputWrapper);
                });

                inputWrapper.appendChild(textInput);
                inputWrapper.appendChild(removeButton);
                container.appendChild(inputWrapper);

});
</script>
</body>
</html>